<h1>Welcome#index</h1>
<p>Find me in app/views/welcome/index.html.erb</p>

<% if current_user %>
<p>ようこそ<%= current_user.name %>さん</p>
<% end %>

<% if notice %>
<p><%= notice %></p>
<% end %>

<% if current_user %>
<p>Bot List</p>
<table>
  <% Bot.where(user_id: current_user.id).each do |bot| %>
    <tr>
      <td><%= bot.id %></td>
      <td><%= bot.name %></td>
      <td><%= bot.nickname %></td>
      <td><%= link_to("userstreamの開始","/bot/#{bot.id}/userstream/start") %></td>
      <td><%= link_to("userstreamの停止","/bot/#{bot.id}/userstream/stop") %></td>
    </tr>
  <% end %>
</table>
<% end %>

<p>menu</p>
<ul>
  <% if current_user  %>
    <li><%= link_to "Botを認証", "/auth/bot"%></li>
    <li><%= link_to "ログアウト", "/logout" %></li>
  <% else %>
    <li><%= link_to "Twitterでログイン", "/auth/twitter" %></li>
  <% end %>
</ul>
